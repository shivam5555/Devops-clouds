pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "your-dockerhub-username/flask-api:latest"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/YOUR_GITHUB_USERNAME/flask-docker-jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                echo "ğŸ› ï¸ Building Docker Image..."
                docker build -t ${DOCKER_IMAGE} .
                '''
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh '''
                    echo "ğŸš€ Pushing Docker Image to Docker Hub..."
                    docker push ${DOCKER_IMAGE}
                    '''
                }
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                echo "ğŸ”„ Stopping existing container..."
                docker stop flask-api || true
                docker rm flask-api || true

                echo "ğŸ“¥ Pulling latest Docker Image..."
                docker pull ${DOCKER_IMAGE}

                echo "ğŸš€ Running Flask API Container..."
                docker run -d -p 5000:5000 --name flask-api ${DOCKER_IMAGE}

                echo "âœ… Deployment Complete!"
                docker ps
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… Deployment Successful! Flask API is running on port 5000."
        }
        failure {
            echo "âŒ Deployment Failed! Check logs for details."
        }
    }
}

